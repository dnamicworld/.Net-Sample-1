<!DOCTYPE html>
<html lang="en">
<head>
    <link href='http://fonts.googleapis.com/css?family=Quicksand' rel='stylesheet' type='text/css'>
    <meta charset="utf-8" />
    <title>Ecolect</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />    
    
    @Scripts.Render("~/bundles/modernizr")


    <link rel="stylesheet" href="~/assMeets/css/normalize.css" rel="text/stylesheet">
    <link rel="stylesheet" href="~/assets/css/bootstrap.css" rel="text/stylesheet">
    <link rel="stylesheet" href="~/assets/css/styles.css" rel="text/stylesheet">
    <script src="~/Scripts/js/my.namespace.js"></script>    
