@{
    ViewBag.Title = "CrearAlertas";
}

<div id="divCrearAlertas" class="container">

<script src="~/Scripts/js/dataservices/alertas.dataservices.js"></script>
<script src="~/Scripts/js/alertas/alertas.js"></script>

<div class="clearfix"></div>

    <section id="createAnonymousAlert">



        <div id="primerPasoAlerta">

            <div id="createAlertTitlePaso1">
                               
                 <h3><img src="~/assets/images/ICONO-ALERTA.png"0 style="margin-right:10px;" >Primer Paso: Ingresa tu correo electrónico y comentarios</h3>
            </div>
            <div id="alertaForm1" class="col-lg-5">
                <form role="form">
                    <div class="form-group">
                        <label for="txtCorreo">Correo Electrónico</label>
                        <input type="email" class="form-control" id="txtCorreo" data-bind="value: email" placeholder="Correo Electrónico">
                    </div>
                    <div class="form-group">
                        <label for="txtComentarios">Comentarios</label>
                        <textarea rows="15" class="form-control" id="txtComentarios" data-bind="value: comentarios" placeholder="Comentarios"></textarea>
                    </div>
                    <button type="button" data-bind="click: primerPaso" class="btn btn-danger btn-lg" style="color:orangered; background-color:white;">Siguiente</button>
                </form>
            </div>

             <div id="map-canvas" class="col-lg-5 col-lg-offset-2" data-bind="map:mapOne"></div>

        </div>

         <div class="clearfix"></div>

       

        <div id="tercerPasoAlerta" style="display: none;">
            <div id="createAlertTitlePaso3">
                <h3>Tercer Paso: Publica las fotos</h3>
            </div>
            <div id="alertaForm3" class="col-lg-5">
                <form role="form">
                    <button type="button" data-bind="click: tercerPaso" class="btn btn-primary">Siguiente</button>
                </form>
            </div>
        </div>

        <div id="cuartoPasoAlerta" style="display: none;">
            <div id="createAlertTitlePaso4">
                <h3 style="font-size:5em; text-align:center;" class="textoExitoso">Tu alerta ha sido enviada!</h3>
            </div>
        </div>

        <!-- End Anonymous Alert-->
    </section>

    </div>